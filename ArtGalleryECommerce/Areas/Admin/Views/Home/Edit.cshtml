                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductDescription" class="control-label"></label>
                <input asp-for="ProductDescription" class="form-control" />
                <span asp-validation-for="ProductDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductSize" class="control-label"></label>
                <input asp-for="ProductSize" class="form-control" />
                <span asp-validation-for="ProductSize" class="text-danger"></span>
            </div>
            <div class="form-group">
                @await Component.InvokeAsync("ArtistAdmin", Model.ArtistID)
                @*<label asp-for="ArtistID" class="control-label"></label>
            <input asp-for="ArtistID" class="form-control" />
            <span asp-validation-for="ArtistID" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                @await Component.InvokeAsync("Type", Model.ProductTypeID)
                @*<label asp-for="ProductTypeID" class="control-label"></label>
            <input asp-for="ProductTypeID" class="form-control" />
            <span asp-validation-for="ProductTypeID" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" id="txt" type="text" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
                <img src="@Model.Image" height="150px" width="150px" alt="Img" id="img"/>
            </div>
            <div class="form-group">
                <label for="">Resim seçin</label>
                @*<p id="b64"></p>*@
                <input type="file" class="form-control-file" id="inp">
                @*<img id="img" height="150">*@
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                    </label>
                </div>
            </div>
            @*<div class="form-group">
            <label asp-for="CreationDate" class="control-label"></label>
            <input asp-for="CreationDate" class="form-control" />
            <span asp-validation-for="CreationDate" class="text-danger"></span>
        </div>*@
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<script>
    function readFile() {

        if (this.files && this.files[0]) {

            var FR = new FileReader();

            FR.addEventListener("load", function (e) {
                document.getElementById("img").src = e.target.result;
                //document.getElementById("b64").innerHTML = e.target.result;
                document.getElementById("txt").value = "";
                document.getElementById("txt").value = e.target.result;
            });

            FR.readAsDataURL(this.files[0]);
        }

    }

    document.getElementById("inp").addEventListener("change", readFile);
</script>