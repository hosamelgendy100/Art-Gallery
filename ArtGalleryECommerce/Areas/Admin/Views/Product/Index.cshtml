@model ArtGalleryECommerce.Models.ViewModels.ProductViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<div class="container-fluid">
    <a asp-controller="Product" asp-action="Create">Create New</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.ID)</th>
                <th>@Html.DisplayNameFor(model => model.ProductName)</th>
                <th>@Html.DisplayNameFor(model => model.Price)</th>
                <th>@Html.DisplayNameFor(model => model.ProductSize)</th>
                <th>@Html.DisplayNameFor(model => model.ProductType)</th>
                <th>@Html.DisplayNameFor(model => model.Artist)</th>
                <th>@Html.DisplayNameFor(model => model.ProductState)</th>
                <th>@Html.DisplayNameFor(model => model.Image)</th>

                @*<th>@Html.DisplayNameFor(model => model.ImageUrl)</th>
        <th>@Html.DisplayNameFor(model => model.CategoryId)</th>*@
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ViewModelActiveProducts)
            {
            <tr>
                <td>@item.ID</td>
                <td>@item.ProductName</td>
                <td>@item.Price</td>
                <td>@item.ProductSize</td>
                <td>@item.ProductType</td>
                <td>@item.Artist</td>
                <td>@item.ProductState</td>
                <td><img src="@item.Image" width="100px" height="100px" alt="@item.ProductName" /></td>

                @*<td>@item.ImageUrl</td>
        <td>@item.CategoryId</td>*@
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
            }


        </tbody>
    </table>
</div>