@model ArtGalleryECommerce.Models.ViewModels.ProductViewModel
<!-- Pending Requests Card Example -->
<div class="col-xl-3 col-md-6 mb-4">
    <div class="card border-left-warning shadow h-100 py-2">
        <div class="card-body">
            <div class="row no-gutters align-items-center">
                <div class="col mr-2">
                    <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">Sold Products</div>
                    <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ViewModelProducts.Where(x => x.ProductState == ArtGalleryECommerce.Models.Common.Common.ProductState.Sold).Count()</div>
                </div>
                <div class="col-auto">
                    <i class="fas fa-comments fa-2x text-gray-300"></i>
                </div>
            </div>
        </div>
    </div>
</div>

