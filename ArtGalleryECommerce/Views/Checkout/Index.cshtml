@model ArtGalleryECommerce.Models.ViewModels.OrderViewModel;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@Html.Partial("_header")

<div class="spacer-2x">&nbsp;</div>

<div class="container">
    
